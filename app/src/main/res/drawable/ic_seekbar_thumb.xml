<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
                android:shape="oval"
                android:useLevel="true">
            <size
                    android:width="15dp"
                    android:height="15dp" />

            <solid android:color="#81B5B5B5" />

        </shape>
    </item>

    <item
            android:bottom="3dp"
            android:left="3dp"
            android:right="3dp"
            android:top="3dp">
        <shape
                android:shape="oval"
                android:useLevel="true">
            <size
                    android:width="15dp"
                    android:height="15dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>