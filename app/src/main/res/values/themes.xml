

<resources>

    <style name="Platform.Theme.SmovBookM" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/black30</item>
    </style>

    <style name="Theme.SmovBookM" parent="Platform.Theme.SmovBookM">
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryDark">@color/blue800</item>
        <item name="colorAccent">@color/yellow700</item>
    </style>

    <style name="Theme.SmovBookM.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SmovBookM.AppSplash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_content</item>
        <item name="postSplashScreenTheme">@style/Theme.SmovBookM.NoActionBar</item>
    </style>

    <style name="Theme.SmovBookM.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.SmovBookM.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

</resources>
